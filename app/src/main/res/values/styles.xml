<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTabTransparent" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@null</item>
        <item name="tabRippleColor">@null</item>
        <item name="android:background">@color/transparent</item>
        <item name="tabTextColor">@color/black</item>
        <item name="tabSelectedTextColor">@color/blue</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_gravity">start</item>
        <item name="tabTextAppearance">@style/AppTabTransparentAppearance</item>
        <item name="tabIndicator">@drawable/bg_blue_tab</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabIndicatorFullWidth">false</item>
        <item name="tabMinWidth">36dp</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="AppTabTransparentAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">14sp</item>
        <item name="textAllCaps">true</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
</resources>